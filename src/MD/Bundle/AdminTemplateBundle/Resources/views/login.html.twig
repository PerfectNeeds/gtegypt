{% extends 'AdminTemplateBundle::base2.html.twig' %}
{% block page_title %}Login{% endblock %}

{% block body -%}
    {% if error %}
        <div class="alert alert-block alert-danger fade in">
        <strong>Oh snap!</strong> {{ error.message }}.
    </div>
{% endif %}

<form role="form" method="POST" action="{{ path('login_check') }}">
    <div class="form-group has-feedback lg left-feedback no-label">
        <input type="text" class="form-control no-border input-lg rounded" name="_username" value="{{ last_username }}" placeholder="Enter Username" autofocus>
        <span class="fa fa-user form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback lg left-feedback no-label">
        <input type="password" class="form-control no-border input-lg rounded" name="_password" placeholder="Enter Password">
        <span class="fa fa-unlock-alt form-control-feedback"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info btn-lg btn-perspective btn-block">LOGIN</button>
    </div>
</form>
{% endblock %}