{% extends 'FEBundle::base.html.twig' %}

{% block title %}{{ entity.title }}{% endblock %}

{% block metaTag %}{{ entity.htmlMeta }}{% endblock %}

{% block content %}
<section class="post-wrapper-top dm-shadow clearfix">
    <div class="container">
        <div class="post-wrapper-top-shadow">
            <span class="s1"></span>
        </div>
        <div class="col-lg-12">
            <h2>{{ entity.title }}</h2>
        </div>
    </div>
</section><!-- end post-wrapper-top -->

    {% set cr = app.request.attributes.get('_route') %}
<section class="generalwrapper dm-shadow clearfix">
    <div class="container">
        <div class="row">
            <div id="left_sidebar" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 first clearfix">
                <div class="widget cats_widget clearfix">
                    {#<div class="title"><h3><i class="icon-sale"></i>Clients</h3></div>#}
                    <ul class="real-estate-cats-widget effect-slide-left in" style="transition: all 0.7s ease-in-out 0s;" data-effect="slide-left">
                       {% for client in clients|slice(0, 3) %}
                        <li><a href="#">{{ client.title }}</a></li>
                        {% endfor %}
                    </ul>
                </div><!-- end widget -->
            </div><!-- #left_sidebar -->

            <div id="content" class="col-lg-6 col-md-6 col-sm-6 col-xs-12 clearfix">
                <h2 style="border-bottom: 1px solid;color: #54287f;text-transform: uppercase;display: block;font-size: 25px;font-weight: bold;padding-bottom:10px;">{{ entity.title }}</h2>
                <img src="{{ asset("uploads/clients/" ~ entity.id ~ "/"  ~ entity.getMainImage.id) }}" style="margin: 0 auto;display:block;">
                <p>{{ entity.content.description|raw }}</p>
            </div><!-- end content -->

            <div id="right_sidebar" class="col-lg-3 col-md-3 col-sm-3 col-xs-12 last clearfix">
                <div class="widget clearfix">
                    <div class="agents_widget" style="background-color: #f0f0f0;padding: 15px;">
                        <div class="title"><h3><i class="fa fa-phone"></i> Contact Details</h3></div>
                        <p><i class="fa fa-external-link"></i> Grant Thornton (Mohamed Hilal) <br/> 
                            87 Ramsis Street, Cairo, Egypt</p>
                        <p><i class="fa fa-envelope"></i> <a href="mailto:info@gtegypt.org">info@gtegypt.org</a> <br/>
                            <i class="fa fa-phone-square"></i> +2 (02) 25770785<br/>
                            <i class="fa fa-phone-square"></i> +2 (02) 25744810 </p>
                    </div><!-- end of agents_widget -->
                </div><!-- end of widget -->
            </div><!-- end sidebar -->

        </div><!-- end row -->
    </div><!-- end container -->
</section><!-- end generalwrapper -->

{% endblock %}