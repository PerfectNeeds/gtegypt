{% extends 'AdminTemplateBundle::base.html.twig' %}
{% set page_title %}Banner creation{% endset %}
{% block body -%}

    <div class="panel panel-default">
        <div class="panel-heading">
            <h6 class="panel-title"><i class="icon-bubble4"></i> {{ page_title }}</h6>
        </div>
        <div class="panel-body">
            <form class="form bootstrap-validator-form" id="validation" action="{{ path('banner_create') }}" method="post"  {{form_enctype(upload_form)}} {{ form_enctype(form) }} >
                <div class="form-group">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.url) }}
                    {{ form_widget(form.url) }}
                    <p class="help-block">hint : https://google.com</p>
                </div>  
                {{ form_rest(form) }}
                <div class="form-group">
                        <label class="col-sm-2 control-label">Target New Tab</label>
                        <input value="1" class="form-control" type="checkbox" name="open_type">
                </div>
                <div class="form-group">
                    {{ form_widget(upload_form.file) }}
                </div>                        
                <div class="form-group text-right">
                    <button class="btn btn-success" type="submit"><i class="fa fa-check"></i> Create</button>
                    <button class="btn btn-danger" type="reset"><i class="fa fa-refresh"></i> Reset</button>
                </div>
            </form>
            <div class="panel-body">
                <a class="btn btn-round btn-info" href="{{ path('banner') }}"><i class="icon-undo"></i> Back to the list</a>
            </div>
        </div>
    </div>
{% endblock %}
