{% extends 'AdminTemplateBundle::base.html.twig' %}
{% set page_title %}Faq Category List{% endset %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/admintemplate/assets/plugins/datatable/css/bootstrap.datatable.min.css') }}" rel="stylesheet">
{% endblock %}
{% block body -%}
    <div class="the-box text-right rounded">
        <a class="btn btn-success" href="{{ path('faqcategory_new') }}">Create a new entry</a>
    </div>
    <div class="the-box">
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="datatable-example">
                <thead class="the-box dark full">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.id }}</td>
                            <td>{{ entity.name }}</td>
                            <td>
                                <a href="{{ path('faq', { 'cId': entity.id }) }}" class="btn btn-warning" title="List"><i class="fa fa-list"></i></a>
                                <a href="{{ path('faqcategory_edit', { 'id': entity.id }) }}" class="btn btn-info" title="Edit"><i class="fa fa-pencil"></i></a>
                                <a  href="#" onclick="javascript:del({{entity.id}})" class="btn btn-danger" title="Delete"><i class="fa fa-minus"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <form hidden name="delete_form" id="delete_form" action="{{ path('faqcategory_delete') }}" method="POST"  >
        <input type="hidden" name="id" id="entityId" />
    </form>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/admintemplate/assets/plugins/datatable/js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/admintemplate/assets/plugins/datatable/js/bootstrap.datatable.js') }}"></script>
    <script>
        function del(id) {
            if (confirm("Are you sure you want to delete?"))
            {
                $('#entityId').val(id);
                $('#delete_form').submit();
            }
        }
    </script>
{% endblock %}