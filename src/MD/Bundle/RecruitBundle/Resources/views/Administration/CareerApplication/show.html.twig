{% extends 'AdminTemplateBundle::base.html.twig' %}
{% set page_title %}{{ entity.fullName }}'s Application{% endset %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/admintemplate/assets/plugins/datatable/css/bootstrap.datatable.min.css') }}" rel="stylesheet">
{% endblock %}
{% block body -%}
    <div class="the-box full no-border">
        <div class="table-responsive">
            <table class="table table-striped table-primary" id="datatable-example">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Position</th>
                        <td>{{ entity.positionName }}</td>
                    </tr>
                    <tr>
                        <th>Position Code</th>
                        <td>{{ entity.positionCode }}</td>
                    </tr>
                    <tr>
                        <th>Full Name</th>
                        <td>{{ entity.fullName }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ entity.email }}</td>
                    </tr>
                    <tr>
                        <th>Education</th>
                        <td>{{ entity.education }}</td>
                    </tr>
                    <tr>
                        <th>Certificate</th>
                        <td>{{ entity.certificate }}</td>
                    <tr>
                        <th>Years of Experience</th>
                        <td>{{ entity.yearsEx }}</td>
                    <tr>
                        <th>Sector</th>
                        <td>{{ entity.sector }}</td>
                    </tr>
                    <tr>
                        <th>City</th>
                        <td>{{ entity.city }}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>{{ entity.address }}</td>
                    </tr>
                    <tr>
                        <th>Company</th>
                        <td>{{ entity.company }}</td>
                    </tr>
                    <tr>
                        <th>Last Position</th>
                        <td>{{ entity.lastPosition }}</td>
                    </tr>
                    <tr>
                        <th>Last Salary</th>
                        <td>{{ entity.lastSalary }}</td>
                    </tr>
                    <tr>
                        <th>Expected Salary</th>
                        <td>{{ entity.expectedSalary }}</td>
                    </tr>
                    <tr>
                        <th>Created</th>
                        <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>C.V</th>
                        <td>
                            {% if entity.getFirstDocuments != null %}
                                <a class="btn btn-success btn-block" href="{{ path('download', {'d': '{"document":'~entity.getFirstDocuments.id~',"element":'~entity.id~',"type":11}'}) }}"><i class="fa fa-cloud-download"></i> Download</a>
                            {% else %}
                                No Upload
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
            <div >
                <a href="{{ path('careerapplication') }}" class="btn btn-warning">Back to the list</a>
            </div>
        </div>
    </div>
{% endblock %}