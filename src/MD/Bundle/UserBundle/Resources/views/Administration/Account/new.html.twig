{% extends 'AdminTemplateBundle::base.html.twig' %}
{% set page_title %}User creation{% endset %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/admintemplate/assets/plugins/validator/bootstrapValidator.min.css') }}" rel="stylesheet">
{% endblock %}

{% block body -%}
    {% if errorMessage %}<div class="error">{{errorMessage}}</div>{% endif %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h6 class="panel-title"><i class="icon-bubble4"></i> {{ page_title }}</h6>
        </div>
        <div class="panel-body">
            <form class="form bootstrap-validator-form" id="validation" action="{{ path('account_create') }}" role="form" method="POST">
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" placeholder="Full Name" id="full_name" name="username" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" placeholder="Email Address" id="email" name="email" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" placeholder="Password" id="pasword" name="password" class="form-control"/>
                </div>

                <div class="form-group">
                    <label class="col-lg-3 control-label">Gender</label>
                    <div class="col-lg-5">
                        <div class="radio">
                            <label>
                                <input type="radio" id="male" name="gender" checked="checked" />Male
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" id="female" name="gender" /> Female
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    Active
                                    <input type="checkbox" checked="" name="active" value="{{ 1 }}" class="i-grey-flat">
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group text-right">
                    <button class="btn btn-success" type="submit"><i class="fa fa-check"></i> Create</button>
                    <button class="btn btn-danger" type="reset"><i class="fa fa-refresh"></i> Reset</button>
                </div>
            </form>
            <div >
                <a href="{{ path('user') }}" class="btn btn-warning">Back to the list</a>
            </div>
        </div>
    </div>
{% endblock %}

